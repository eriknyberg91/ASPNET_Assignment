@model UserSignInForm

@{
    ViewData["Title"] = "Sign In";
    Layout = "_CleanLayout";
}

<div class="login-container">
    <form asp-action="SignIn" asp-controller="Auth" method="post" novalidate class="login-form">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

        <h2>Login</h2>

        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Your email address" />
        <span asp-validation-for="Email"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Enter your password" />
        <span asp-validation-for="Password"></span>

        <div class="remember-me">
            <input type="checkbox" id="remember" name="RememberMe" checked />
            <label for="remember">Remember Me</label>
        </div>

        <div class="form-group error-msg">@ViewBag.ErrorMessage</div>

        <button data-modal="true" type="submit">Log In</button>

        <p class="signup-text">Don't have an account? <a href="/auth/signup">Sign Up</a></p>
    </form>
</div>


